<TextInput>:
    valign:"center"
<Label>:
    font_size:"35dp"
<Popup>:
    title_font:"Bodrum-JzRm.ttf"
    title_align:"center"
    title_size:"49dp"
    background_color:112/255, 41/255, 99/255,1
    separator_color:1423/255,214/255,156/255,1
    size_hint:0.7,0.7 
<Button>:
    font_name:"KingthingsBloone-3926.ttf"
    font_size:"30dp"
    background_color: 112/255, 41/255, 99/255,1
    color:1423/255,214/255,156/255,1

    
<Button_Norm>:
    on_press:self.press(),app.root.user_modify()
<Home>:
    name:"home"
    canvas.before:
        Color: 
            rgba: 112/255, 41/255, 99/255,1
        Rectangle:
            pos:self.pos
            size:self.size
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'bottom'
        Button: 
            halign:"right"
            id:add          
            text:"Add"
            on_press:app.root.current="sign_up_user"
            background_normal:""
            size_hint:.3,.3

    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'top'
        Button:
            id:settings            
            text:"Settings     "
            halign:"right"
            on_press:app.root.current="settings"
            background_normal:""
            size_hint:.3,.3

    AnchorLayout:
        Button:
            canvas.before:
                Rectangle:
                    pos:self.pos
                    size:self.size
            background_normal:""
            text:"Start"
            font_size:"49dp"
            font_name: "KingthingsBloone-3926.ttf"
            on_press:app.root.user_choose()
            size_hint:.3,.17


<Button_round>:
    canvas.before:
        Color:
            rgba:self.background_color
        Ellipse:

            pos:(self.x/2)-120,self.y/2
            size:self.width*4,self.width*4
            segments:777
    on_press:root.button_handle(),app.root.introduction()

<TextInput>:
    font_size:"49dp"
    multiline:False

<SignUp_Popup>:
    title:"SIGNUP"
    title_size :"49dp"
    auto_dismiss:False
    BoxLayout:
        orientation:"vertical"
        Label:
            text:"KINDLY LOGIN OR \n SIGN_UP TO PROCEED"
        BoxLayout:
            Button:
                text:"SIGN UP"
                on_press:app.root.sign_up(),root.dismiss()
            Button:
                text:"LOG IN"
                on_press:app.root.log_in(),root.dismiss()
<Max_User>:
    title:"MAX"
    size_hint:0.7,0.7
    Button:
        text:"U have registered \n 4 maximum users"
<User_Exists>:
    title:"EXISTS"
    title_size :"49dp"
    size_hint:0.7,0.7
    Button:
        text:"The User \n Already Exists"
<Wrong_Credentials>:
    title:"WRONG CRENDETIALS"
    title_size :"49dp"
    size_hint:0.7,0.7
    Button:
        text:"The User Does Not Exists \n Wrong Crendetials \n click to go back"
        on_press:root.dismiss(),root.back()
<Account_Exists>:
    title:"EXISTS"
    size_hint:0.7,0.7
    Button:
        text:"The Account \n Already Exists"

<Introduction_Screen>:
    name:"introduction"
    BoxLayout:
        canvas.before:
            Color:
                rgba: 112/255, 41/255, 99/255,1
            Rectangle:
                pos:self.pos
                size:self.size

        orientation:"vertical"
        Label:
            id:user
            font_size:"70dp"
        Button:
            id:age
            text:"0"
            font_size:"70dp"
            background_normal:""
            color:1,1,1,1
            background_color: 112/255, 41/255, 99/255,1
            font_name:"KingthingsBloone-3926.ttf"
            on_press:app.root.calculation() if self.text=="Ready" else None
        Label:
            text:"Am your Math Tutor"
            halign:"left"
            font_size:"49dp"
<Calculation_screen>:
    name:"calculation"
    BoxLayout:
        canvas.before:
            Color:
                rgba: 112/255, 41/255, 99/255,1
            Rectangle:
                pos:self.pos
                size:self.size

        orientation:"vertical"
        BoxLayout:
            orientation:"vertical"
            Label:
                id:label_calculate
                text:"Welcome"
                font_name:"TeaForGod-K78Re.otf"
                font_size:"49dp"
            TextInput:
                halign:"right"
                id:user_input
                font_name:"Rudiment-0gwP.ttf"
                font_size:"70dp"
                multiline:False
        GridLayout:
            cols:3
            Button:
                text:'9'
                font_size:"49dp"
                font_name:"KingthingsBloone-3926.ttf"
                on_press:root.button_touch(self)
            Button:
                text:'8'
                font_name:"KingthingsBloone-3926.ttf"
                font_size:"49dp"
                on_press:root.button_touch(self)
            Button:
                text:'7'
                font_size:"49dp"
                font_name:"KingthingsBloone-3926.ttf"
                on_press:root.button_touch(self)
            Button:
                text:'6'
                font_size:"49dp"
                font_name:"KingthingsBloone-3926.ttf"
                on_press:root.button_touch(self)
            Button:
                text:'5'
                font_size:"49dp"
                font_name:"KingthingsBloone-3926.ttf"
                on_press:root.button_touch(self)
            Button:
                text:'4'
                font_size:"49dp"
                font_name:"KingthingsBloone-3926.ttf"
                on_press:root.button_touch(self)
            Button:
                text:'3'
                font_size:"49dp"
                font_name:"KingthingsBloone-3926.ttf"
                on_press:root.button_touch(self)
            Button:
                text:'2'
                font_size:"49dp"
                font_name:"KingthingsBloone-3926.ttf"
                on_press:root.button_touch(self)
            Button:
                text:'1'
                font_size:"49dp"
                font_name:"KingthingsBloone-3926.ttf"
                on_press:root.button_touch(self)


        BoxLayout:

            Button:
                font_name:"Bodrum-JzRm.ttf"
                text:"Clear"
                font_size:"49dp"
                on_press:root.button_touch(self)

            Button:
                font_name:"Bodrum-JzRm.ttf"
                text:"0"
                font_size:"49dp"
                on_press:root.button_touch(self)
            Button:
                text:"Enter"
                font_size:"49dp"
                font_name:"Bodrum-JzRm.ttf"
                id:enter_button
                on_press:root.button_touch(self)

<Login_Screen>: 
    name:"log_in"
    BoxLayout:
        canvas.before:
            Color:
                rgba: 112/255, 41/255, 99/255,1
            Rectangle:
                size:self.size
                pos:self.pos
        orientation:"vertical"
        BoxLayout:
            Label:
                text:"EMAIL ADDRESS"
            TextInput:
                id:email
        BoxLayout:
            Label:
                text:"PASSWORD"
            TextInput:
                password:True
                id:password
        BoxLayout:
            Button:
                id:log_in
                text:"LOG IN"
                on_press:
                    if self.text=="LOG IN":root.validate()
                    if self.text=="Successfully Logged In":app.root.user_choose()
            Button:
                text:"BACK"
                on_press:app.root.user_choose()

<Signup_Screen>:
    name:"sign_up"
    BoxLayout:
        canvas.before:
            Color:
                rgba: 112/255, 41/255, 99/255,1
            Rectangle:
                size:self.size
                pos:self.pos
        orientation:"vertical"
        BoxLayout:
            id:email_box
            Label:
                text:"EMAIL ADDRESS"
            TextInput:
                id:email
        BoxLayout:
            Label:
                text:"PASSWORD"
            TextInput:
                password:True
                id:password
        BoxLayout:
            Label:
                text:"CONFIRM \n PASSWORD"
            TextInput:
                password:True
                id:password_confirm
        BoxLayout:
            
            Button:
                id:sign_up
                text:"SIGN UP"
                on_press:
                    if self.text=="SIGN UP":root.validate()
                    if self.text=="Successfully Added":app.root.sign_up_user()
            Button:
                text:"BACK"
                on_press:app.root.user_choose()
<Signup_Screen_user>:
    name:"sign_up_user"
    BoxLayout:
        canvas.before:
            Color:
                rgba: 112/255, 41/255, 99/255,1
            Rectangle:
                pos:self.pos
                size:self.size
        orientation:"vertical"
        BoxLayout:
            Label:
                text:"FIRST NAME"
            TextInput:
                id:first_name
        BoxLayout:
            Label:
                text:"SECOND NAME"
            TextInput:
                id:second_name
        BoxLayout:
            Label:
                text:"DATE OF BIRTH"
            Button:
                text:'Date Picker'
                id:date_of_birth
                on_press:root.date_picker()

        Button:
            id:sign_up_users
            text:"SIGN UP USER"
            on_press:
                if self.text=="SIGN UP USER":root.validate()
                if self.text=="Successfully Added":app.root.user_choose()
        Button:
            text:"BACK"
            on_press:app.root.user_choose()

<Quit_Popup>:
    title:"EXIT"
    title_size :"49dp"
    auto_dismiss:False
    size_hint:0.7,0.7
    BoxLayout:
        orientation:"vertical"
        Label:
            text:"Would you like to \n exit the program?"
        BoxLayout:
            Button:
                text:"YES"
                on_press:root.quit()
            Button:
                text:"NO"
                on_press:app.root.user_choose(),root.dismiss()
<User_Choose>:
    name:"user_choose"
    canvas.before:
        Color: 
            rgba: 112/255, 41/255, 99/255,1
        Rectangle:
            pos:self.pos
            size:self.size
<Settings_Screen>:
    BoxLayout:
        canvas.before:
            Color: 
                rgba: 112/255, 41/255, 99/255,1
            Rectangle:
                pos:self.pos
                size:self.size
        orientation:"vertical"

        Button:
            text:"Sound"
            on_press:app.root.sound()
        Button:
            text:"Change Account \n     Attributes"
            on_press:app.root.user_modify_pre()
            hallign:"center"
        Button:
            hallign:"center"
            text:"Change Adminstrator \n        Attributes"
            on_press:app.root.admin_modify()
            #sound
            #change user
        Button:
            text:"BACK"
            on_press:app.root.current="home"
            #change admin
<Sound_Screen>:
    name:"sound"
    BoxLayout:
        canvas.before:
            Color: 
                rgba: 112/255, 41/255, 99/255,1
            Rectangle:
                pos:self.pos
                size:self.size
        orientation:"vertical"
        Label:
            text:"SFX"
        BoxLayout:
        
            Slider:
                id:sfx
                range:(0,100)
            Label:
                text:str(int(sfx.value))
        Label:
            text: "MUSIC"
        BoxLayout:
            
            Slider:
                id:music
                range:(0,100)
            Label:
                text:str(int(music.value))

        Button:
            text:"Save"
            on_press:root.save()
        Button:
            text:"Back"
            on_press:app.root.settings()
<User_Modify>:
    name:"user_modify"
    BoxLayout:
        canvas.before:
            Color:
                rgba: 112/255, 41/255, 99/255,1
            Rectangle:
                pos:self.pos
                size:self.size
        orientation:"vertical"
        BoxLayout:
            Label:
                text:"FIRST NAME"
            TextInput:
                id:first_name
        BoxLayout:
            Label:
                text:"SECOND NAME"
            TextInput:
                id:second_name
        BoxLayout:
            Label:
                text:"COLOR"
            Button:
                text:'RANDOMIZE  \n    COLOR'
                id:color
                on_press:root.color_randomize()

        BoxLayout:
            Label:
                text:"DATE OF BIRTH"
            Button:
                text:'Date Picker'
                id:date_of_birth
                on_press:root.date_picker()
        BoxLayout:
            Button:
                id:change_users
                text:"CHANGE USER"
                on_press:
                    if self.text=="CHANGE USER":root.validate()
                    if self.text=="Successfully Changed":app.root.user_choose()
            Button:
                text:"BACK"
                on_press:app.root.settings()

<Admin_Modify>:
    name:"admin"
    BoxLayout:
        canvas.before:
            Color:
                rgba: 112/255, 41/255, 99/255,1
            Rectangle:
                size:self.size
                pos:self.pos
        orientation:"vertical"
        BoxLayout:
            Label:

                text:"EMAIL ADDRESS"
            TextInput:
                id:email
        BoxLayout:
            Label:
                text:"PASSWORD"
            TextInput:
                password:True
                id:password
        BoxLayout:
            Button:
                id:change
                text:"CHANGE"
                on_press:
                    if self.text=="CHANGE":root.validate()
                    if self.text=="Successfully Changed": app.root.current="home"
            Button:
                text:"BACK"
                on_press:app.root.settings()




            
